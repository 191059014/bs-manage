<?xml version="1.0" encoding="UTF-8"?>

<!--please pay attention that: file name should not be logback.xml，name it 
	logback-spring.xml to use it in springboot framework -->
<configuration>

	<springProperty scope="context" name="logging.path"
		source="logging.path" />
	<springProperty scope="context" name="logging.level"
		source="logging.level.com.gaoyang.wfplatform.wfpserver" />


    <!--为了防止进程退出时，内存中的数据丢失，请加上此选项-->
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

    <!-- 可用来获取StatusManager中的状态 -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <!-- 解决debug模式下循环发送的问题 -->
    <logger name="org.apache.http.impl.conn.Wire" level="WARN" />

    <appender name="vertex-aliyun" class="com.gyjx.vertex.logback.VertexAppender"/>

    <!-- 控制台日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %level %C.%M[%F:%L] - %msg%n</Pattern>-->
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%F:%L] traceNo:%X{traceNo} - %msg%n</Pattern>
        </encoder>
    </appender>

	<!-- to generate logfile daily -->
	<appender name="ERROR-APPENDER"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
		<!-- a filter that show green light for object that has a error log level -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>error</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<!-- log name -->
        <file>${logging.path}/common-error-${hostname}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- logfile name with daily rolling -->
            <FileNamePattern>${logging.path}/common-error-${hostname}.log.%d{yyyy-MM-dd}
			</FileNamePattern>
			<!-- log perserve days -->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--output format：%d is for date，%thread is for thread name，%-5level：loglevel 
				with 5 character %msg：log message，%n line breaker -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %level %C.%M[%F:%L]traceNo:%X{traceNo} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<appender name="COMMON-APPENDER"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
        <file>${logging.path}/common-default-${hostname}.log</file>
		<!-- to generate a log file everyday with a longest lasting of 30 days -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- logfile name with daily rolling -->
			<FileNamePattern>
                ${logging.path}/common-default-${hostname}.log.%d{yyyy-MM-dd}
			</FileNamePattern>
			<!-- log perserve days -->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--output format：%d is for date，%thread is for thread name，%-5level：loglevel 
				with 5 character %msg：log message，%n line breaker -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %level %C.%M[%F:%L]traceNo:%X{traceNo} - %msg%n</pattern>
			<!-- encoding -->
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<!-- ______日志 -->
	<appender name="WFPSERVER-APPENDER"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
		<file>${logging.path}/bizlog-wfpserver-${hostname}.log</file>
		<!-- to generate a log file everyday with a longest lasting of 30 days -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- logfile name with daily rolling -->
			<FileNamePattern>
				${logging.path}/bizlog-wfpserver-${hostname}.log.%d{yyyy-MM-dd}
			</FileNamePattern>
			<!-- log perserve days -->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--output format：%d is for date，%thread is for thread name，%-5level：loglevel 
				with 5 character %msg：log message，%n line breaker -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %level %C.%M[%F:%L] - %msg%n</pattern>
			<!-- encoding -->
			<charset>UTF-8</charset>
		</encoder>
	</appender>


	<!-- 业务监控日志 -->
	<appender name="MONITOR-APPENDER"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>${logging.level}</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<file>${logging.path}/monitor/wfplatform-monitor-${hostname}.log</file>
		<!-- to generate a log file everyday with a longest lasting of 30 days -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- logfile name with daily rolling -->
			<FileNamePattern>
				${logging.path}/monitor/wfplatform-monitor-${hostname}.log.%d{yyyy-MM-dd}
			</FileNamePattern>
			<!-- log perserve days -->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	<!-- 提供者rpc监控日志 -->
	<appender name="providerMonitorAppender"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>${logging.level}</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
        <file>${logging.path}/monitor/provider-monitor-${hostname}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>
                ${logging.path}/monitor/provider-monitor-${hostname}.log.%d{yyyy-MM-dd}
			</FileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

    <!-- 消费者rpc监控日志 -->
    <appender name="consumerMonitorAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>${logging.level}</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${logging.path}/monitor/consumer-monitor-${hostname}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${logging.path}/monitor/consumer-monitor-${hostname}.log.%d{yyyy-MM-dd}
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 钉钉告警监控日志 -->
	<appender name="DINGDING-MONITOR-APPENDER"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>${logging.level}</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<file>${logging.path}/monitor/dingding-monitor-${hostname}.log</file>
		<!-- to generate a log file everyday with a longest lasting of 30 days -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- logfile name with daily rolling -->
			<FileNamePattern>
				${logging.path}/monitor/dingding-monitor-${hostname}.log.%d{yyyy-MM}
			</FileNamePattern>
			<!-- log perserve days -->
			<MaxHistory>18</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<logger name="wfpserver" level="${logging.level}" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="WFPSERVER-APPENDER" />
		<appender-ref ref="COMMON-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
        <appender-ref ref="vertex-aliyun"/>
	</logger>

	<logger name="csplatform-monitor" level="${logging.level}"
		additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="MONITOR-APPENDER" />
	</logger>
	
	<logger name="dingding-monitor" level="${logging.level}"
		additivity="false">
		<appender-ref ref="DINGDING-MONITOR-APPENDER" />
        <appender-ref ref="vertex-aliyun"/>
	</logger>

	<!-- 提供者监控日志 -->
	<logger name="com.gaoyang.provider.monitor" level="${logging.level}"
		additivity="false">
		<appender-ref ref="providerMonitorAppender" />
	</logger>

    <!-- 消费者监控日志 -->
    <logger name="com.gaoyang.consumer.monitor" level="${logging.level}" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="consumerMonitorAppender"/>
    </logger>




    <root level="${logging.level}">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="COMMON-APPENDER"/>
        <appender-ref ref="ERROR-APPENDER"/>
		<appender-ref ref="vertex-aliyun"/>
    </root>
</configuration>